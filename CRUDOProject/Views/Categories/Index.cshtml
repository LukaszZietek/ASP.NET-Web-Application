@model IEnumerable<Repository.Models.Category>

@{
    ViewBag.Title = "Dostępne kategorie";
}

<h2>Dostępne kategorie:</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Stwórz nową", "Create",null,new {@class = "btn btn-success btn-lg"})
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Kategorie:")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Edytuj", "Edit", new {id = item.Id}, new { @class = "btn btn-warning"})
                @Html.ActionLink("Szczegóły", "Details", new {id = item.Id}, new {@class = "btn btn-info"})
                @Html.ActionLink("Usuń", "Delete", new {id = item.Id}, new {@class = "btn btn-danger"})
            }
            @*@Html.ActionLink("Wybierz", "ShowAdvertisements", new {id = item.Id}, new { @class = "btn btn-primary"})*@
            @Html.ActionLink("Wybierz", "Index","Advertisements", new {id = item.Id}, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
